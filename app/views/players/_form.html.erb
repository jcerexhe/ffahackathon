<%= form_for(player) do |f| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12 m6">
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :hometown %>
        <%= f.text_field :hometown %>
      </div>

      <div class="field">
        <%= f.label :current_team %>
        <%= f.text_field :current_team %>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="field">
        <%= f.label :position %>
        <%= f.text_field :position %>
      </div>

      <div class="field">
        <%= f.label :position_type %>
        <%= f.text_field :position_type %>
      </div>

      <div class="field">
        <%= f.label :photo %>
        <%= f.text_field :photo %>
      </div>

      <div class="actions">
        <%= f.submit 'Create New Player', class: 'waves-effect waves-light btn teal lighten-2' %>
        <%= link_to 'Back to Players', players_path, class: 'waves-effect waves-light btn' %>
      </div>
    </div>
  </div>
<% end %>
