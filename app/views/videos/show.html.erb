<div class="breadcrumbs-player">
  <%= link_to 'Home', root_path %> > <%= link_to 'Library', videos_path %> > <%= @video.title %>
</div>

<div class="row">
  <div class="col s12 m8">
    <iframe width="100%" height="350" src="https://www.youtube.com/embed/<%= @video.video_url %>" frameborder="0" allowfullscreen></iframe>
  </div>
  <div class="col s12 m4 video-show-header">
    <img src="<%= @video.player.photo %>" alt="<%= @video.title %>" class="video-player-photo">
  </div>
</div>

<h5><%= @video.title %></h5>

<p>
  <%= @video.player.full_name %>
</p>

<p>
  <strong>Uploaded by:</strong>
  <%= @video.user.email %>
</p>

<% @tags.each do |tag| %>
  <div class="chip">
    <%= tag %>
  </div>
<% end %>

<br><br><br>

<button>Share on FB etc etc</button>
